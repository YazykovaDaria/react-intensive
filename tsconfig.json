  {
    "compilerOptions": {
        "target": "es2017",
        "jsx": "react-jsx",
        "moduleResolution": "node",
        "lib": ["dom", "es2020"],
        "module": "esnext",
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
          "paths": {
            "@public/*": ["./public/*"],
            "@app/*": ["./src/app/*"],
            "@views/*": ["./src/views/*"],
            "@widgets/*": ["./src/widgets/*"],
            "@features/*": ["./src/features/*"],
            "@entities/*": ["./src/entities/*"],
            "@shared/*": ["./src/shared/*"]
        },
        "types": ["react", "react-dom"],
        "skipLibCheck": true,
        "outDir": "dist"
    },
    "include": ["src"]
}
